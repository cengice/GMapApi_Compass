<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/btnMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="#FFF"
        android:background= "@color/colorPrimaryDark"
        android:padding="10dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/btn_map"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_serviceok"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnMap"
        android:layout_alignBottom="@+id/btnMap"
        android:layout_alignEnd="@+id/txt_savedtextbear"
        android:layout_alignRight="@+id/txt_savedtextbear"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/textbear"
        android:layout_toRightOf="@+id/textbear"
        android:text="@string/txt_serviceok"
        android:textAlignment="center"
        android:textColor="#67ac15"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMap"
        android:layout_width="wrap_content" />

    <TextView
        android:id="@+id/txt_servicenotok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnMap"
        android:layout_alignBottom="@+id/btnMap"
        android:layout_alignEnd="@+id/txt_savedtextbear"
        android:layout_alignRight="@+id/txt_savedtextbear"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/textbear"
        android:layout_toRightOf="@+id/textbear"
        android:text="@string/txt_servicenotok"
        android:textAlignment="center"
        android:textColor="#ff0000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCompass" />


