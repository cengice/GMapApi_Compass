    <TextView
        android:id="@+id/textlat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_serviceok"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/textlon"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_savedtextlat"
        app:layout_constraintTop_toBottomOf="@+id/txt_serviceok" />

    <TextView
        android:id="@+id/textlon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textlat"
        android:layout_alignStart="@+id/textlat"
        android:layout_below="@+id/textlat"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/textlon"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_savedtextlon"
        app:layout_constraintTop_toBottomOf="@+id/textlat" />


    <TextView
        android:id="@+id/txt_savedtextlat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnMap"
        android:layout_below="@+id/txt_serviceok"
        android:layout_alignRight="@+id/btnMap"
        android:layout_alignTop="@+id/textlat"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/txt_savedtextlat"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/txt_serviceok"
        app:layout_constraintTop_toBottomOf="@+id/txt_serviceok" />


    <TextView
        android:id="@+id/txt_savedtextlon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textlon"
        android:layout_alignLeft="@+id/txt_savedtextlat"
        android:layout_alignStart="@+id/txt_savedtextlat"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/txt_savedtextlon"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/txt_savedtextlat"
        app:layout_constraintTop_toBottomOf="@+id/txt_savedtextlat" />

    <TextView
        android:id="@+id/txt_savedtextbear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textlon"
        android:layout_alignStart="@+id/textlon"
        android:layout_below="@+id/textlon"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/txt_savedtextbear"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/txt_savedtextlon"
        app:layout_constraintTop_toBottomOf="@+id/txt_savedtextlon" />

    <TextView
        android:id="@+id/textbear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_savedtextlon"
        android:layout_alignStart="@+id/txt_savedtextlon"
        android:layout_alignTop="@+id/txt_savedtextbear"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/textbear"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_savedtextbear"
        app:layout_constraintTop_toBottomOf="@+id/textlon" />

    <TextView
        android:id="@+id/txt_savedtextNE"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginTop="8dp"
        android:text="@string/txt_savedtextNE"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/txt_savedtextbear"
        app:layout_constraintTop_toBottomOf="@+id/txt_savedtextbear" />

    <TextView
        android:id="@+id/textNE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/textNE"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_savedtextNE"
        app:layout_constraintTop_toBottomOf="@+id/textbear" />

    <Button
        android:id="@+id/btnCompass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:background= "@color/colorPrimaryDark"
        android:padding="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/btn_compass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnMap"
        app:layout_constraintTop_toTopOf="parent" />

